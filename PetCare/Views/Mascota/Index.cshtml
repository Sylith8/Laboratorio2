@model List<PetCare.Models.Mascota>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Lista de Mascotas";
}

<div class="container mt-5">

    @functions {
        public string MascaraTelefono(string telefono)
        {
            if (string.IsNullOrWhiteSpace(telefono))
                return "";

            var soloNumeros = new string(telefono.Where(char.IsDigit).ToArray());

            if (soloNumeros.Length == 10)
                return $"{soloNumeros.Substring(0, 3)}-{soloNumeros.Substring(3, 3)}-{soloNumeros.Substring(6, 4)}";

            return telefono;
        }
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            🐾 Lista de Mascotas Registradas
        </h2>

        <a href="@Url.Action("Registrar", "Mascota")" class="btn btn-success shadow mt-3">
            <i class="bi bi-plus-circle"></i> Registrar Nueva Mascota
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Nombre</th>
                        <th>Especie</th>
                        <th>Raza</th>
                        <th>Edad</th>
                        <th>Dueño</th>
                        <th>Teléfono</th>
                        <th>Fecha Ingreso</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mascota in Model)
                    {
                        <tr>
                            <td>@mascota.Nombre</td>
                            <td>@mascota.Especie</td>
                            <td>@mascota.Raza</td>
                            <td>@mascota.Edad</td>
                            <td>@mascota.NombreDueno</td>
                            <td>@MascaraTelefono(mascota.Telefono)</td>
                            <td>@mascota.FechaIngreso.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4 text-center shadow-sm">
            <i class="bi bi-info-circle"></i> No hay mascotas registradas aún.
        </div>
    }

</div>